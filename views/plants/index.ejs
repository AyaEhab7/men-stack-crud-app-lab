<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Plants</title>
  <link rel="stylesheet" href="/styles.css">

</head>
<body>
  <h1>All Plants</h1>
  <a href="/plants/new">Add a New Plant</a>
  <ul>
    <% plants.forEach(plant => { %>
      <li>
        <a href="/plants/<%= plant._id %>"><%= plant.name %></a>
        <a href="/plants/<%= plant._id %>/edit">Edit</a>
        <form action="/plants/<%= plant._id %>?_method=DELETE" method="POST" style="display:inline;">
          <button class="delete-button" type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>
